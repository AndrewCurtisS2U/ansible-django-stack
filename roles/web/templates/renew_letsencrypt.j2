#!/bin/sh
# Renew Let's Encrypt SSL cert

[ -z "$LE_DIR" ] && LE_DIR=/opt/letsencrypt/

if ! [ -d "$LE_DIR" ]; then
    echo "$LE_DIR does not exist. Have you cloned letsencrypt?"
    exit 1
fi

cd "$LE_DIR"
service nginx stop
timeout 1m ./letsencrypt-auto --config /etc/letsencrypt/cli.ini {{ letsencrypt_domain_string }} certonly

if [ $? -ne 0 ]; then
    ERRORLOG=$(tail /var/log/letsencrypt/letsencrypt.log)
        echo -e "The Lets Encrypt Cert has not been renewed! \n \n" $ERRORLOG | mail -s "Lets Encrypt Cert Alert" joel@kazbak.co.uk
fi

service nginx start

exit 0
